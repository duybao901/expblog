<div class="mt-4">
    <div class="container">
        <h2 class="mb-4">Create Video 🍀</h2>
        <form method="POST" action="/course/store">
            <div class="form-group">
                <label for="name">Name Course</label>
                <input type="text" class="form-control" id="name" name="name">
                <label for="description">Description</label>
                <input type="text" class="form-control" id="description" name="description">
                <label for="videoId">Video ID</label>
                <input type="text" class="form-control" id="videoId" name="videoId">
                <label for="levles">Level</label>
                <input type="text" class="form-control" id="levles" name="level">
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>