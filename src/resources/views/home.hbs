<div class="mt-4">
    <div class="container">
        <h2 style="margin:20px 0">My Courses <span>🐊</span></h2>

        <div class="row">
            {{#each courses}}
            <div class="card-course-item col-sm-12 col-md-6 col-lg-4">
                <div class="card">
                    <a href="/course/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                    </a>
                    <div class="card-body">
                        <a href="/course/{{this.slug}}" style="color: inherit;">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/course/{{this.slug}}" class="btn btn-primary">Watch</a>
                    </div>
                </div>
            </div>
            {{else }}
            No courses have been created yet 🚀.
            <a href="/course/create">Create course</a>
            {{/each}}
        </div>
    </div>
</div>
</div>